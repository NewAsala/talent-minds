<odoo>
    <data>
        
    <record model="ir.ui.view" id="test_page">
      <field name="name">sp_website list</field>
      <field name="model">sp_website.sp_website</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="sp_website.action_window">
      <field name="name">sp_website window</field>
      <field name="res_model">sp_website.sp_website</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="sp_website.action_server">
      <field name="name">sp_website server</field>
      <field name="model_id" ref="model_sp_website_sp_website"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="sp_website" id="sp_website.menu_root"/>

    <!-- menu categories -->
    <menuitem name="Menu 1" id="sp_website.menu_1" parent="sp_website.menu_root"/>
    <menuitem name="Menu 2" id="sp_website.menu_2" parent="sp_website.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="sp_website.menu_1_list" parent="sp_website.menu_1"
              action="sp_website.action_window"/>
    <menuitem name="Server to list" id="sp_website" parent="sp_website.menu_2"
              action="sp_website.action_server"/>


        
