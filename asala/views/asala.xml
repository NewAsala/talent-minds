<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="asala.list">
      <field name="name">asala list</field>
      <field name="model">asala.asala</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="asala.action_window">
      <field name="name">asala window</field>
      <field name="res_model">asala.asala</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->
    <record model="ir.actions.server" id="asala.action_server">
      <field name="name">asala server</field>
      <field name="model_id" ref="model_asala_asala"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>

    <!-- Top menu item -->
    <menuitem name="asala" id="asala.menu_root"/>
    <!-- menu categories -->
    <menuitem name="Menu 1" id="asala.menu_1" parent="asala.menu_root"/>
    <menuitem name="Menu 2" id="asala.menu_2" parent="asala.menu_root"/>
    <!-- actions -->
    <menuitem name="List" id="asala.menu_1_list" parent="asala.menu_1"
              action="asala.action_window"/>
    <menuitem name="Server to list" id="asala" parent="asala.menu_2"
              action="asala.action_server"/>
  </data>
</odoo>